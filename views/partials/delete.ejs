<%if(locals.selectedBlog){%>
    <form method="POST" action="/delete/<%=selectedBlog.id%>">
    <label>Confirm deletion of blog: <%=selectedBlog.title%></label>
    <button id="del" type="submit">Delete</button>
    </form>
<%}else{%>
    <h2>Select Blog to delete</h2>
    <ul>
        <% blogList.forEach(blog => { %>
            <li>
            <%= blog.title %>
            <a href="/delete/<%= blog.id %>">Delete</a>
            </li>
        <% }) %>
    </ul>
<%}%>

